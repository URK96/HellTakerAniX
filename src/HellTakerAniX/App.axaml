<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:HellTakerAniX.ViewModels;assembly=HellTakerAniX"
             x:Class="HellTakerAniX.App"
             RequestedThemeVariant="Default">
    <Application.DataContext>
        <viewModels:AppViewModel />
    </Application.DataContext>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Resources/logo.ico" 
                      ToolTipText="Avalonia Tray Icon ToolTip">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Add Character"
                                        Command="{Binding AddCharacterViewCommand}" />
                        <NativeMenuItem Header="App Setting" />
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Exit"
                                        Command="{Binding ExitAppCommand}" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>
